<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/fasola_foreground" />
        </shape>
    </item>
    <item>
        <layer-list>
            <!-- just bottom and right borders. positions are only respected inside layer-list -->
            <item android:top="-5dp" android:left="-5dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1dp" android:color="@color/fasola_foreground" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>