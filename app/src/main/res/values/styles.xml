<resources>

    <color name="fasola_background">#ffedeae3</color>
    <color name="fasola_foreground">#ff411c24</color>
    <color name="tab_background">#44411c24</color>
    <color name="list_header_background">#b0666666</color>

    <color name="fasolatab_background">#fff4eedd</color>
    <color name="fasolatab_selected">@color/fasola_foreground</color>
    <color name="fasolatab_deselected">#ffaaaaaa</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Fasolatheme2014">
        <item name="android:colorBackground">@color/fasola_background</item>
        <item name="android:windowBackground">@color/fasola_background</item>

        <!-- For Lollipop+ ActionBar dropdown -->
        <item name="android:textAppearanceLargePopupMenu">@android:style/TextAppearance.Holo.Inverse</item>
        <item name="android:textAppearanceSmallPopupMenu">@android:style/TextAppearance.Holo.Inverse</item>

        <!-- PagerSlidingTabStrip styles -->
        <item name="pstsShouldExpand">true</item>
        <item name="pstsIndicatorColor">@color/fasola_foreground</item>
        <item name="pstsUnderlineColor">@color/fasola_foreground</item>
        <item name="pstsDividerColor">@color/fasola_foreground</item>
        <item name="pstsTabBackground">@drawable/sliding_tab_background</item>
        <item name="pstsTabPaddingLeftRight">10dp</item>
        <item name="pstsIndicatorHeight">4dp</item>
        <item name="pstsUnderlineHeight">1dp</item>

        <!-- ActionBar overrides -->
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

    <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">48dip</item>
    </style>

    <!-- Flat Toggle Buttons -->
    <style name="FasolaToggleLayout">
        <item name="android:background">@drawable/toggle_outline</item>
    </style>
    <style name="FasolaToggle" parent="@android:style/Widget.Holo.Light.Button.Toggle">
        <item name="android:background">@drawable/toggle_background</item>
        <item name="android:textColor">@color/toggle_text</item>
        <item name="android:button">@null</item> <!-- hide the actual check box -->
    </style>
</resources>
