<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Key"/>

        <TableLayout
            android:id="@+id/key_layout"
            style="@style/FasolaToggleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TableRow>

                <CheckBox
                    android:id="@+id/key_a"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A" />

                <CheckBox
                    android:id="@+id/key_b_flat"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A#/Bb" />

                <CheckBox
                    android:id="@+id/key_b"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="B" />

                <CheckBox
                    android:id="@+id/key_c"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C" />

                <CheckBox
                    android:id="@+id/key_d_flat"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C#/Db" />

                <CheckBox
                    android:id="@+id/key_d"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="D" />

            </TableRow>

            <TableRow>

                <CheckBox
                    android:id="@+id/key_e_flat"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="D#/Eb" />

                <CheckBox
                    android:id="@+id/key_e"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="E" />

                <CheckBox
                    android:id="@+id/key_f"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="F" />

                <CheckBox
                    android:id="@+id/key_f_sharp"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="F#/Gb" />

                <CheckBox
                    android:id="@+id/key_g"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="G" />

                <CheckBox
                    android:id="@+id/key_a_flat"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="G#/Ab" />

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/major_minor_layout"
                style="@style/FasolaToggleLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/key_major"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Major" />

                <CheckBox
                    android:id="@+id/key_minor"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Minor" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/multiple_key_layout"
                style="@style/FasolaToggleLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/key_single"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Single" />

                <CheckBox
                    android:id="@+id/key_multiple"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Multiple" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Time Signature" />

        <LinearLayout
            android:id="@+id/time_layout"
            style="@style/FasolaToggleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/time_2_2"
                style="@style/FasolaToggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2/2" />

            <CheckBox
                android:id="@+id/time_4_4"
                style="@style/FasolaToggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4/4" />


            <CheckBox
                android:id="@+id/time_2_4"
                style="@style/FasolaToggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2/4" />


            <CheckBox
                android:id="@+id/time_3_2"
                style="@style/FasolaToggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3/2" />

            <CheckBox
                android:id="@+id/time_3_4"
                style="@style/FasolaToggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3/4" />

            <CheckBox
                android:id="@+id/time_6_4"
                style="@style/FasolaToggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6/4" />

            <CheckBox
                android:id="@+id/time_6_8"
                style="@style/FasolaToggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6/8" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/multiple_time_layout"
            style="@style/FasolaToggleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/time_single"
                style="@style/FasolaToggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Single" />

            <CheckBox
                android:id="@+id/time_multiple"
                style="@style/FasolaToggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Multiple" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Page Orientation" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/page_orientation_layout"
                style="@style/FasolaToggleLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/page_full"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Full" />

                <CheckBox
                    android:id="@+id/page_top"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Top" />

                <CheckBox
                    android:id="@+id/page_bottom"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bottom" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/page_left_right_layout"
                style="@style/FasolaToggleLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/page_left"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Left" />

                <CheckBox
                    android:id="@+id/page_right"
                    style="@style/FasolaToggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Right" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Page Number" />

        <org.florescu.android.rangeseekbar.RangeSeekBar
            android:id="@+id/page_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            app:absoluteMaxValue="573"
            app:absoluteMinValue="26"
            app:step="1"

            app:showLabels="false"
            app:alwaysActive="true"
            app:activateOnDefaultValues="true"
            app:textAboveThumbsColor="@color/fasola_foreground"
            app:thumbPressed="@drawable/range_thumb_active"
            app:thumbNormal="@drawable/range_thumb_normal"
            app:thumbDisabled="@drawable/range_thumb_normal"
            app:barHeight="2dp"
            app:activeColor="@color/fasola_foreground"
            app:defaultColor="@color/slider_background" />

    </LinearLayout>
</ScrollView>