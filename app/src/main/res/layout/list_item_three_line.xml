<?xml version="1.0" encoding="utf-8"?>
<!--
    A reusable layout with three stacked text items
    Should be used within a vertical LinearLayout

    See, e.g. list_item_singing and list_item_playlist for usage
-->

<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:ellipsize="end"
        android:singleLine="true" />

    <TextView android:id="@android:id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/multiline_item_lineheight_offset"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:ellipsize="end"
        android:singleLine="true" />

    <TextView android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/multiline_item_lineheight_offset"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:ellipsize="end"
        android:singleLine="true" />

</merge>